---
import Section from "@/components/Section.astro";

import { work } from "@resume";
---

<Section title="Work Experience">
  <ul>
    {
      work.map(({ position, name, startDate, endDate, summary, url }) => {
        const sd = new Date(startDate);
        const startYear = sd.getFullYear();
        const startMonth = sd.toLocaleString("default", { month: "short" });
        const ed = endDate ? new Date(endDate) : new Date();
        const endYear = endDate ? ed.getFullYear() : "Present";
        const endMonth = endDate ? ed.toLocaleString("default", { month: "short" }) : "";
        const years = `${startMonth} ${startYear} - ${endMonth} ${endYear}`;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{position}</h3>
                  <h4>
                    <a href={url}>{name}</a>
                  </h4>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  h3 {
    font-weight: 600;
    font-size: 1rem;
  }
  
  h4 {
    font-family: inherit;
    font-weight: 450;
    font-size: 0.9rem;
    margin-top: 4px;
  }

  time {
    font-size: 0.85rem;
    font-weight: 400;
  }

  p {
    font-size: 0.8rem;
  }
</style>
