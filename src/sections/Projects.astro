---
import Section from "@/components/Section.astro";

import { projects } from "@resume";
---

<Section title="Projects">
  <ul>
    {
      projects.map(({ name, description, url, highlights, endDate }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a
                    href={url}
                    title={`${name} - ${description}`}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {name}
                  </a>
                  {endDate == null && <span class="is-active">&bull;</span>}
                </h3>
                <p>{description}</p>
              </header>

              <footer>
                {highlights.map((highlight) => (
                  <span>{highlight}</span>
                ))}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  .is-active {
    color: #4caf50;
  }

  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(256px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid #eee;
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  h3 {
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 8px;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.8rem;
    line-height: 1.2rem;
    margin-bottom: 8px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.8rem;
  }

  footer span {
    border-radius: 4px;
    padding: 0.2rem 0.6rem;
    background-color: #eee;
    color: #000;
    font-size: 0.7rem;
    font-weight: 500;
  }
</style>
