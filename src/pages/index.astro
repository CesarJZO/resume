---
import Layout from "@/layouts/Layout.astro";

import About from "@/sections/About.astro";
import Education from "@/sections/Education.astro";
import Experience from "@/sections/Experience.astro";
import Profile from "@/sections/Profile.astro";
import Projects from "@/sections/Projects.astro";
import Skills from "@/sections/Skills.astro";

import { basics } from "@resume";
const { name, label, summary } = basics;
---

<Layout title=`${name} | ${label}` lang="en" description={summary}>
  <main>
    <Profile />
    <About />
    <Experience />
    <Education />
    <Skills />
    <Projects />
  </main>
</Layout>

<style>
  main {
    padding-block: 4rem;
    max-width: 720px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    main {
      padding: 2rem;
    }
  }
</style>
